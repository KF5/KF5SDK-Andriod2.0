<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/kf5_dimen_16dp">

    <TextView
        android:id="@+id/kf5_user_field_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:gravity="start"
        android:singleLine="true"
        android:textColor="@color/kf5_user_field_label_color"
        android:textSize="@dimen/kf5_text_h_size"
        tools:text="adadadasda" />

    <TextView
        android:id="@+id/kf5_user_field_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/kf5_message_value_color"
        android:textSize="@dimen/kf5_text_l_size"
        tools:text="asdadadsadzxczc" />
</LinearLayout>