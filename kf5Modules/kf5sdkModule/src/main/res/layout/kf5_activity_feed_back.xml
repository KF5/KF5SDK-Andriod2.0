<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/kf5_title_bar" />

    <EditText
        android:id="@+id/kf5_feed_back_content_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:focusable="false"
        android:gravity="top|start"
        android:hint="@string/kf5_edittext_hint"
        android:padding="@dimen/kf5_dimen_16dp"
        android:textColor="@color/kf5_et_content_text_color"
        android:textColorHint="@color/kf5_et_hint_text_color"
        android:textSize="@dimen/kf5_text_size_18" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/kf5_dimen_8dp">

        <ImageView
            android:id="@+id/kf5_feed_back_choice_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/kf5_choice_img_source" />

        <LinearLayout
            android:id="@+id/kf5_feed_back_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/kf5_dimen_4dp"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>