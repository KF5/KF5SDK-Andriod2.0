<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kf5_list_item_selected_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/kf5_dimen_12dp">

        <ImageView
            android:id="@+id/kf5_look_feed_back_listitem_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/kf5_point"
            android:visibility="invisible"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/kf5_dimen_4dp"
            android:layout_marginStart="@dimen/kf5_dimen_4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kf5_look_feed_back_listitem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/kf5_look_feed_back_list_item_title_color"
                android:textSize="@dimen/kf5_text_h_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/kf5_dimen_8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kf5_look_feed_back_listitem_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:singleLine="true"
                    android:textColor="@color/kf5_look_feed_back_list_item_date_color"
                    android:textSize="@dimen/kf5_text_m_size" />

                <TextView
                    android:id="@+id/kf5_look_feed_back_listitem_statu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/kf5_dimen_4dp"
                    android:layout_marginRight="@dimen/kf5_dimen_4dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/kf5_look_feed_back_list_item_date_color"
                    android:textSize="@dimen/kf5_text_m_size" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/kf5_jump_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:background="@color/kf5_line_color" />

</LinearLayout>